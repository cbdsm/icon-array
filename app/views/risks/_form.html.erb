<div class="tab-pane <%= 'active' if i == 1%>" id="color<%=i%>">
	<% if i != 0 %>
		<div class="field">
		  <%= r.label :value, 'Risk' %>
	    <%= r.number_field :value, {:class => 'span1 risk-field'} %>
	  </div>
	<% end %>

  <div class="field">
    <%= r.label :hex, 'Color' %>
    <%= r.text_field :hex, {:class => 'color-field'} %>
  </div>

  <div class="field">
		<%=image_tag(r.object.icon.url(:default), {:id => "icon#{i}", :class => "form-icon"}) if r.object.icon? %>
    <%= r.label :icon %>
    <%= r.file_field :icon, {:class => 'image-field'} %>
  </div>
</div>
