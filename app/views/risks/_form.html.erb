<div class="tab-pane <%= 'active' if i == 1%> color-pane" id="color<%=i%>">
	<% if i != 0 %>
		<div class="field">
			<!-- Risk field -->
	    <%= r.number_field :value, {:step => '.01', :class => 'span1 risk-field editable value-field', :id => "risks_#{i}_value", :autofocus => (i == 1)} %>
			<%=link_to 'ok', "#", {:id => "risks_#{i}_value_submit", :class => 'btn submittable hide description-field'}%>
			
			<!-- Population field (i.e. 'out of 100' )-->
			<%= r.text_field :population, {:placeholder => "out of #{@pictograph.cells}", :class => "span2 #{'editable' if @advanced}", :id => "risks_#{i}_population", :readonly => !@advanced} %>
			<%=link_to 'ok', "#", {:id => "risks_#{i}_population_submit", :class => 'btn submittable hide'}%>
			
			<!-- Description/Legend field -->
			<%= r.text_field :description, {:placeholder => "population members exhibit this property", :class => 'span4 editable', :id => "risks_#{i}_description"} %>
			<%=link_to 'ok', "#", {:id => "risks_#{i}_description_submit", :class => 'btn submittable hide'}%>
	  </div>
	<% end %>

  <div class="field">
    <%= r.label :hex, 'Color' %>
    <%= r.text_field :hex, {:class => 'color-field'} %>
  </div>

  <!-- <div class="field">
		<%=image_tag(r.object.icon.url(:default), {:id => "icon#{i}", :class => "form-icon"}) if r.object.icon? %>
    <%= r.label :icon %>
    <%= r.file_field :icon, {:class => 'image-field'} %>
  </div> -->
</div>
