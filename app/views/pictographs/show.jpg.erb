<% unless @pictograph.title.blank? %>
		<h3 style="text-align: <%=@pictograph.title_alignment%>;font-size: <%=@pictograph.title_size%>px;font-family: '<%=@pictograph.title_font%>'; width: <%=@pictograph.table_width%>px; margin-left: <%=@pictograph.axis_width + 25%>px;" id="pictograph-title"><%= @pictograph.title %></h3>
<% end %>

<%= render 'graph.html.erb' %>

<div id="editor">
	<dl id="risk-legend">
		<% off = @pictograph.risks.shift
    @pictograph.risks.push(off) %>
		<% @pictograph.risks.each do |risk| %>
			<% if risk.display? %>
				<dt id="risky<%=risk.position%>" style="width: <%=@pictograph.cell_width + 20%>px;">
					<div class="legend-icon" id="test<%=risk.position%>" style="width: <%=@pictograph.cell_width%>px; height: <%=@pictograph.cell_height%>px; background-color: <%=risk.hex%>;" data-color="<%=risk.hex%>"></div>
				</dt>
				<dd id="frisky<%=risk.position%>" style="width: <%=400 - (@pictograph.cell_width + 20)%>px;">
					<% unless risk.value.blank? %>
						<span id="#risks_<%=risk.position%>_value" class="risk-val"><%= risk.value.to_i %></span>
					<% else%>
						<span id="#risks_<%=risk.position%>_value" class="risk-val"><%= @pictograph.off_value %></span>
					<% end %>
						<%= risk.population %> <%= risk.description %>
				</dd>
			<% end %>
		<% end %>
	</dl>
</div>