<%= form_for(@pictograph, :html => {:class => '.form-horizontal'}) do |f| %>
  <% if @pictograph.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pictograph.errors.count, "error") %> prohibited this pictograph from being saved:</h2>

      <ul>
      <% @pictograph.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %> 
		<%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :risk %>
    <%= f.number_field :risk %>
  </div>
  <div class="field">
    <%= f.label :incremental_risk %>
    <%= f.number_field :incremental_risk %>
  </div>
  <div class="field">
    <%= f.label :reduced_risk %>
    <%= f.number_field :reduced_risk %>
  </div>
  <div class="field">
    <%= f.label :risk_color %>
    <%= f.text_field :risk_color, {:class => 'color-field'} %>
  </div>
  <div class="field">
    <%= f.label :incremental_risk_color %>
    <%= f.text_field :incremental_risk_color, {:class => 'color-field'} %>
  </div>
  <div class="field">
    <%= f.label :reduced_risk_color %>
    <%= f.text_field :reduced_risk_color, {:class => 'color-field'} %>
  </div>
  <div class="field">
    <%= f.label :off_color %>
    <%= f.text_field :off_color, {:class => 'color-field'} %>
  </div>
  <div class="field">
    <%= f.label :cell_width %>
    <%= f.number_field :cell_width %>
  </div>
  <div class="field">
    <%= f.label :cell_height %>
    <%= f.number_field :cell_height %>
  </div>
  <div class="field">
    <%= f.label :cell_spacing %>
    <%= f.number_field :cell_spacing %>
  </div>
  <div class="field">
    <%= f.label :cols %>
    <%= f.number_field :cols %>
  </div>
  <div class="field">
    <%= f.label :rows %>
    <%= f.number_field :rows %>
  </div>
  <div class="field">
    <%= f.check_box :axis_labels %> <%= f.label :axis_labels %> 
  </div>
  <div class="field">
    <%= f.label :axis_position_left, 'left' %><%= f.radio_button :axis_position, 'left' %>
		<%= f.label :axis_position_right, 'right' %><%= f.radio_button :axis_position, 'right' %>
  </div>
  <div class="field">
    <%= f.label :axis_font %>
    <%= f.text_field :axis_font %>
  </div>
  <div class="field">
    <%= f.label :axis_font_size %>
    <%= f.number_field :axis_font_size %>
  </div>
  <div class="field">
    <%= f.label :axis_width %>
    <%= f.number_field :axis_width %>
  </div>
  <div class="actions">
    <%= f.submit "Save" %> <%= f.submit 'Preview' %>
  </div>
<% end %>
