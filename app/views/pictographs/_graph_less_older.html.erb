<% if @pictograph.thousand? %>
	<%= render '/pictographs/thousand.html.erb' %>
<% else %>
	<% rows = Hash.new %>
	<% i = 1 %>
	<% @dec = 1.0 %>
	<%
		# put the off risk at the end
		risks = @pictograph.risks.dup
		off_risk = risks.shift
		bg_color = off_risk.hex
		risks.push off_risk
	%>

	<% risks.each_with_index do |risk, index| %>

		<% val = risk.value.nil? ? @pictograph.off_value : risk.value %>

		<%# every once in a while, we end up back on 0, so we need to add 1 %>
		<%# val += 1 if @dec < 1.0 and ((val - @dec) % 1.0 == 0.0) %>

		<%# adjust for decimal value %>
		<% val -= (1.0 - @dec) %>

		<% dval = val - val.floor %>
		<% val = val.ceil unless risk.value.nil? %>
		<% for j in 1..val %>
			<% current_row = @pictograph.rows - ((i - 1) / @pictograph.cols) %>
			<% rows[current_row] = Array.new if (i - 1) % @pictograph.cols == 0 %>

			<% @dec = (j == val and dval > 0.0) ? dval : 1.0 %>
			<% bg_color = risks[index + 1].hex if @dec < 1.0 %>

			<% content = "<li id='cell#{i}' style='position:relative; background-color: #{bg_color};padding:0;' class='picto-cell fill#{risk.position}' data-color='#{risk.hex}'>" %>
			<%# content += "<div style='background-color: #{risk.hex};  height: #{@pictograph.cell_height * @dec}px; margin-top: #{@pictograph.cell_height * (1.0 - @dec)}px;'></div>" %>
			<%# content += icon_overlay(@pictograph.icon, @pictograph.cell_height, @pictograph.cell_width) if @pictograph.icon? %>
			<% content += image_tag(@pictograph.icon, :style => "height:#{@pictograph.cell_height}px; width: #{@pictograph.cell_width}px; background-color: red; position: absolute; left: 0px; bottom: 0px;") %>
			<% content += image_tag(@pictograph.icon, :style => "height:#{@pictograph.cell_height}px; width: #{@pictograph.cell_width}px; position: absolute; left: 0px; bottom: 0px;") %>
			<% content += "</li>" %>
			<% rows[current_row] << content %>

			<%
				# axis labels
		    if i % @pictograph.cols == 0
		      if @pictograph.axis_labels
		        axis_num = (@pictograph.rows + 1 - current_row) * @pictograph.cols
		        if @pictograph.axis_endpoints and axis_num != @pictograph.cells and axis_num != 0
		        	content = '&nbsp;'
		        else
		        	content = @pictograph.axis_format.gsub('%n', axis_num.to_s)
		        end
		        if @pictograph.axis_position == 'left'
		          rows[current_row].unshift "<li class='picto-axis-label' style='text-align:right;'><div style='font-size: #{@pictograph.axis_font_size}px; line-height: #{@pictograph.axis_line_height}px; margin-top: -#{@pictograph.axis_margin_top}px;'>#{content}</div></li>"
		        else
		          rows[current_row].push "<li class='picto-axis-label' style='text-align:left;'><div style='font-size: #{@pictograph.axis_font_size}px; line-height: #{@pictograph.axis_line_height}px; margin-top: -#{@pictograph.axis_margin_top}px;'>#{content}</div></li>"
		        end
		      end
		    end
			%>

			<% i += 1 %>
		<% end %>
	<% end %>

	<div class='pictograph' style="table-layout: fixed; border-spacing: <%=@pictograph.cell_spacing%>px; width: <%=@pictograph.table_width%>px; ">
		<% for i in 1..@pictograph.rows %>
			<%= "<ul>#{rows[i].join()}</ul>".html_safe %>
		<% end %>

	  <ul class='bottom-row'>
			<% if @pictograph.axis_labels %>
				<% content = @pictograph.axis_format.gsub('%n', '0') %>
				<% if @pictograph.axis_position == 'left' %>
		    	<li class='picto-axis-label' style="text-align:right; width: <%=@pictograph.axis_width%>px;"><div style='font-size: <%=@pictograph.axis_font_size%>px; line-height: <%=@pictograph.axis_line_height%>px; margin-top: -<%=@pictograph.bottom_axis_margin_top%>px;'><%=content%></div></li>
		    	<li colspan='<%=@pictograph.cols%>' class='legend'>&nbsp;</li>
		    <% else %>
		    	<li colspan='<%=@pictograph.cols%>' class='legend'>&nbsp;</li>
		      <li class='picto-axis-label' style="text-align:left; width: <%=@pictograph.axis_width%>px;"><div style='font-size: <%=@pictograph.axis_font_size%>px; line-height: <%=@pictograph.axis_line_height%>px; margin-top: -<%=@pictograph.bottom_axis_margin_top%>px;text-align:left;'><%=content%></div></li>
		    <% end %>
			<% end %>
		</ul>
	</div>
<% end %>