<!DOCTYPE html>
<html>
<head>
  <title>Icon Array</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
	<%= javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery? %>
</head>
<body>
	<div class="navbar navbar-fixed-top">
	  <div class="navbar-inner">
			<%=link_to image_tag('web-logo.png'), '/', {:class => 'brand'} %>
	    <div class="container">    
				<ul class="nav">
				  <li><%=link_to_active_if_current 'Basic', '/', %></li>
				  <li><%=link_to_active_if_current 'Advanced', advanced_path %></li>
				  <li><%= link_to_active_if_current 'Why use icon arrays?', why_path%></li>
					<li><%=link_to_active_if_current 'About us', about_path %></li>
				</ul>
				<form class="navbar-search pull-right">
				  <input type="text" class="search-query" placeholder="Search">
				</form>
	    </div>
	  </div>
	</div>
	
	<div id="branding">
		<%=image_tag 'UM_logo_yellow_white.png' %><br />
		<%=image_tag 'SPHlogo.jpg' %><br />
		<%=image_tag 'RiskLogo.jpg' %> 
	</div>
	
	<div class="container content">
		<%= yield %>
	</div>
</body>
</html>
