<!DOCTYPE html>
<html>
<head>
  <title>Icon Array</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
	<%= javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery? %>
</head>
<body>
	<div class="navbar navbar-fixed-top">
	  <div class="navbar-inner">
			<%=link_to image_tag('web-logo.png'), '/', {:class => 'brand'} %>
	    <div class="container">    
				<ul class="nav">
				  <li><%=link_to_active_if_current 'Basic', '/', %></li>
				  <li><%=link_to_active_if_current 'Advanced', advanced_path %></li>
				  <li><%= link_to_active_if_current 'Why use icon arrays?', why_path%></li>
					<li><%=link_to_active_if_current 'About', about_path %></li>
					<li><%=link_to_active_if_current 'Examples', examples_path %></li>
					<li><%=link_to_active_if_current 'Citation', citation_path %></li>
				</ul>
				<!-- <form class="navbar-search pull-right">
				  <input type="text" class="search-query" placeholder="Search">
				</form> -->
	    </div>
	  </div>
	</div>
	
	<div class="container content">
		<%= yield %>
		<%=yield(:actions)%>
	
	<div id="branding">
		<%=link_to image_tag('UM_small.png'), 'http://www.med.umich.edu/medschool/', {:target => '_blank'} %>
		<%=link_to image_tag('RiskLogo.jpg', :style => 'height: 50px;'), 'http://www.sph.umich.edu/riskcenter/', {:target => '_blank'} %>
		<%=link_to image_tag('CBSSM.png'), 'http://www.cbssm.org', {:target => '_blank'} %> 
		<br clear="left" />
	</div>
</body>
</html>
